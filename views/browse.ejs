<%- include('partials/menuheader') %>

<body class="bg-light">

    <main role="main">

        <form action="/search" class="bg-light" method="GET">
            <div class="container h-100">
                <div class="d-flex justify-content-center h-100">
                    <div class="searchbar">
                        <input class="search_input" type="text" name="search" placeholder="Find a Shop...">
                        <input type="hidden" id="status" name="status" value=<%=status%>>
                        <button type="submit" class="search_icon btn-dark"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </form>
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">

                    <% shops.forEach(shop => { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="/<%= shop.userImage %>" class="card-img-top" alt="brands">
                            <div class="card-body">

                                <h5 class="card-title"><%= shop.username %></h5>
                                <p class="card-text shopDescription"><%= shop.aboutMe%></p>
                                <!-- <p class="card-text">%= shop.shopDescription.substring(0,100) + "... " %></p> -->

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/shops/<%= shop._id%>" class="btn btn-outline-secondary">View</a>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

    </main>




    <%- include('partials/footer') %>