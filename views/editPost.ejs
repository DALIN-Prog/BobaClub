<%- include('partials/menuheader') %>

<body>
    <h2 class="post-title" style="margin: 16px 0 0 16px;">Edit Post</h2>
    <hr>
    <div class="container-fluid">
        <form class="compose-form" action="/post-title-content/edit/<%=postID%>" method="POST">
            <div class="form-group">

                <label for="exampleFormControlTextarea1">Title</label>
                <textarea class="form-control" placeholder="Title" id="exampleFormControlTextarea1" name="postTitle"
                    rows="1" required><%= postTitle %></textarea>
                <label for="exampleFormControlTextarea1">Content</label>
                <textarea class="form-control" placeholder="Content" id="exampleFormControlTextarea1" name="postBody"
                    rows="6" required><%= postBody %></textarea>
            </div>
            <a href="/posts/<%= postID %>" class="btn btn-secondary btn-lg col-lg4">Cancel</a>
            <button type="submit" class="btn btn-primary btn-lg col-lg4">Edit</button>
        </form>



    </div>
    <%- include('partials/footer') %>